@model IEnumerable<CustomerVehicles.Models.Vehicle>

@{
    ViewData["Title"] = "Customers Vehicles";
}

<h1>Vehicles</h1>

<div>

    <table style="margin-left: 35%; margin-top: 10px; border: none;">
        <tr> <h3 style="text-align:center">Search By</h3> </tr>
        <tr>

            @using (Html.BeginForm())

            {
                <td style="border: none; text-align:left">

                    <label id="lblCandidateTitle">Customer Name</label>
                </td>

                <td style="border: none;text-align:right">
                    @Html.DropDownList("CustomerFKID", new SelectList(ViewBag.AllCustomers, "Id", "CustomerName"))
                </td>

                <td style="border: none; text-align:left">

                    <label id="lblCandidateTitle">Status</label>
                </td>

                <td style="border: none;text-align:right">
                    @Html.DropDownList("StatusID", new SelectList(ViewBag.AllVehicleStatus, "Id", "Title"))
                </td>


                <td style="border: none;">
                    <input id="btnSearch" type="submit" value="Search" />
                </td>
            }

        </tr>

    </table>

</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsConnected)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsConnected)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
